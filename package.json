{
  "name": "hittegods",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:kantega/hittegods.git",
  "author": "",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/backend",
      "**/backend/**"
    ]
  },
  "scripts": {
    "start": "yarn lerna run start",
    "build": "yarn lerna run build",
    "prettier": "prettier --write 'packages/**/src/**/*.{js,ts,tsx}'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./packages/**/src/**/*.{js,jsx,ts,tsx}": [
      "npm run prettier"
    ]
  },
  "devDependencies": {
    "husky": "^4.2.5",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5"
  },
  "dependencies": {
    "cross-env": "^7.0.2",
    "yarn": "^1.22.4"
  }
}
